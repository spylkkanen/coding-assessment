{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug OrderTransformer",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/OrderTransformer/bin/Debug/net9.0/OrderTransformer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/OrderTransformer",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Debug Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-tests",
            "program": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/tests/OrderTransformer.Tests",
                "--no-build"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ]
}
